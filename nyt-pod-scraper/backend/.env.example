# Pod Monitor - Local Development Environment Variables
# Copy this file to .env and fill in your values

# LLM Provider: openai, anthropic, or google
LLM_PROVIDER=anthropic

# API Key for your chosen LLM provider
LLM_API_KEY=your-api-key-here

# Model name (optional - defaults will be used if not set)
# OpenAI: gpt-4o, gpt-4o-mini
# Anthropic: claude-sonnet-4-20250514, claude-haiku-4-20250414
# Google: gemini-2.0-flash
LLM_MODEL=

# Flask settings
FLASK_HOST=0.0.0.0
FLASK_PORT=5001
FLASK_DEBUG=true

# SMTP settings for email sending (optional for local dev)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_SENDER=podmonitor@bmj.com

# Data directory (relative to backend/)
DATA_DIR=data
